<div class="container">
    <section class="upload">
        <div>
            <div class="subsection">
                <h3 class="title">Faça o upload</h3>
            </div>
            <div class="subsection">
                <form action="/images" method="post" enctype="multipart/form-data">
                    <div class="input">
                        <input type="file" name="file" id="file" />
                    </div>
                    <div class="input">
                        <label for="file">Título :</label>
                        <input type="text" name="title" id="title" />
                    </div>
                    <div class="input">
                        <label for="file">Descrição :</label>
                        <textarea name="description" id="description"></textarea>
                    </div>  
                    <div>
                         <button type="submit" class="btn-std">Upload&nbsp - &nbsp<i class="fa fa-upload" aria-hidden="true"></i></button>
                    </div>
                </form>
            </div>
        </div>        
    </section>
    
    <section class="newest">
        <div class="subsection">
            <h3 class="title">Imagens recentes</h3>
        </div>
        <div class="images">
            {{#each images}}
                <div>
                    <a href="/images/{{uniqueId}}">
                        <img src="/assets/upload/{{filename}}" alt="{{title}}" class="img-thumbnail"/>
                    </a>
                </div>
            {{/each}}
        </div>
    </section>
</div>
